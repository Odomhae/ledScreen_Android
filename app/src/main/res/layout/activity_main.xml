<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.odom.ledscreen.ColorSelectorDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/black" >

<TextView
    android:id="@+id/textViewNote"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center"
    android:layout_alignParentTop="true"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    android:text="love♥"
    android:textColor="#de000000"
    android:background="@color/white"
    android:textSize="34dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="love♥"
        android:layout_marginVertical="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/textViewNote" />

    <LinearLayout
        android:id="@+id/ll_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_input"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSelector01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="배경색" />

        <Button
            android:id="@+id/buttonSelector02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="글자색" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_color">

        <ImageButton
            android:id="@+id/buttonLeft"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_left"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" />

        <ImageButton
            android:id="@+id/buttonRight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_right2"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" />

        <ImageButton
            android:id="@+id/buttonPlus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_plus"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" />

        <ImageButton
            android:id="@+id/buttonMinus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_minus"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

